{
  "name": "___NAME____",
  "description": "___DESCRIPTION___",
  "version": "0.0.1",
  "author": "Wes Lord",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "@types/node": "^12.20.16",
    "@types/ramda": "^0.28.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.3.2",
    "ramda": "^0.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "react-scripts": "^4.0.3",
    "sass": "^1.35.2",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "lint": "git grep -E '___.+___'; prettier --check src/**/*.{js,jsx,ts,tsx,json,css,scss,md}; echo",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo '--- PRETTIER: ---' && lint-staged --shell"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --check",
      "! git grep -in NOCHECKIN"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
